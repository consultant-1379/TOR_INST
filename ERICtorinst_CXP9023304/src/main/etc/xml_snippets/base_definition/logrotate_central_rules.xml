<litp:component-def id="logrotate_central_rules">
    <litp:logrotate-def id="rsyslog_central">
        <compress>true</compress>
        <create>false</create>
        <dateext>true</dateext>
        <dateformat>-%Y%m%d-%s</dateformat>
        <delaycompress>true</delaycompress>
        <name>rsyslog_central</name>
        <path>/var/log/central/*/central.log</path>
        <postrotate>service rsyslog restart || true</postrotate>
        <rotate>10</rotate>
        <size>512M</size>
    </litp:logrotate-def>
</litp:component-def>
